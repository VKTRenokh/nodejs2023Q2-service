generator client {
  provider        = "prisma-client-js"
  binaryTargets   = ["native", "linux-musl-openssl-3.0.x"]
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  login     String
  version   Int      @default(1)
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Album {
  id       String  @id @default(uuid())
  name     String
  year     Int
  artistId String?
}

model Track {
  id       String  @id @default(uuid())
  name     String
  artistId String?
  albumId  String?
  duration Int
}

model Artist {
  id     String  @id @default(uuid())
  name   String
  grammy Boolean
}

model FavTrack {
  id String @unique
}

model FavArtist {
  id String @unique
}

model FavAlbum {
  id String @unique
}
